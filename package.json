{
    "name": "graphql-react-starter",
    "author": "Jan Carlo Viray <www.jancarloviray.com>",
    "license": "MIT",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "keywords": [
        "Node.js",
        "GraphQL",
        "React",
        "Knex.js",
        "Postgres",
        "Apollo",
        "Redux"
    ],
    "homepage": "https://github.com/jancarloviray/graphql-react-starter#graphql-react-starter",
    "scripts": {
        "build": "bnr build",
        "build:dev": "bnr build:dev",
        "start": "bnr start",
        "start:prod": "bnr start:prod",
        "api": "bnr api",
        "db:migrate": "bnr db:migrate",
        "db:migrate:make": "bnr db:migrate:make",
        "db:migrate:rollback": "bnr db:migrate:rollback",
        "db:seed": "bnr db:seed",
        "db:seed:make": "bnr db:seed:make",
        "db:reset": "bnr db:reset",
        "db:clean": "[[ ! -f \"./src/data/dev.sqlite3\" ]] || rm ./src/data/dev.sqlite3",
        "lint": "eslint .",
        "doc": "readme package.json >> README.md"
    },
    "betterScripts": {
        "build": {
            "command": "rm -rf ./dist/* && webpack --config ./config/webpack.config.js",
            "env": {
                "NODE_ENV": "production",
                "DEBUG": "app:*"
            }
        },
        "build:dev": {
            "command": "rm -rf ./dist/* && webpack --config ./config/webpack.config.js",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        },
        "start": {
            "command": "babel-node ./src/client/devServer.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": 3000,
                "DEBUG": "app:*"
            }
        },
        "start:prod": {
            "command": "webpack --config ./config/webpack.config.js && babel-node ./src/client/devServer.js",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3000,
                "DEBUG": "app:*"
            }
        },
        "api": {
            "command": "babel-node ./src/api/index.js",
            "env": {
                "NODE_ENV": "development",
                "API_PORT": 8080,
                "DEBUG": "app:*"
            }
        },
        "db:migrate": {
            "command": "knex --knexfile ./src/data/knexfile.js migrate:latest",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        },
        "db:migrate:make": {
            "command": "knex --knexfile ./src/data/knexfile.js migrate:make $@",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        },
        "db:migrate:rollback": {
            "command": "knex --knexfile ./src/data/knexfile.js migrate:rollback",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        },
        "db:seed": {
            "command": "knex --knexfile ./src/data/knexfile.js seed:run",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        },
        "db:seed:make": {
            "command": "knex --knexfile ./src/data/knexfile.js seed:make",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        },
        "db:reset": {
            "command": "yarn db:clean && yarn db:migrate && yarn db:seed",
            "env": {
                "NODE_ENV": "development",
                "DEBUG": "app:*"
            }
        }
    },
    "dependencies": {
        "apollo-client": "^0.7.1",
        "body-parser": "^1.15.2",
        "cors": "^2.8.1",
        "cssnano": "^3.10.0",
        "express": "^4.14.0",
        "graphql": "^0.8.0",
        "graphql-server-express": "^0.4.3",
        "graphql-tag": "^1.2.2",
        "graphql-tools": "^0.9.0",
        "knex": "^0.12.6",
        "lodash": "^4.17.3",
        "normalize.css": "^5.0.0",
        "pg": "^6.1.2",
        "pretty-error": "^2.0.2",
        "react": "^15.4.1",
        "react-apollo": "^0.8.1",
        "react-dom": "^15.4.1",
        "react-redux": "^5.0.2",
        "react-router": "^3.0.0",
        "redux": "^3.6.0",
        "redux-thunk": "^2.1.0"
    },
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-core": "^6.21.0",
        "babel-loader": "^6.2.10",
        "babel-plugin-transform-object-rest-spread": "^6.20.2",
        "babel-preset-env": "^1.1.4",
        "babel-preset-react": "^6.16.0",
        "better-npm-run": "^0.0.14",
        "casual": "^1.5.8",
        "compression": "^1.6.2",
        "css-loader": "^0.26.1",
        "debug": "^2.6.0",
        "eslint": "^3.12.2",
        "eslint-plugin-babel": "^4.0.0",
        "eslint-plugin-graphql": "^0.4.3",
        "eslint-plugin-react": "^6.8.0",
        "extract-text-webpack-plugin": "^2.0.0-beta.4",
        "file-loader": "^0.9.0",
        "html-webpack-plugin": "^2.26.0",
        "ip": "^1.1.4",
        "json-loader": "^0.5.4",
        "node-sass": "^4.1.1",
        "nodemon": "^1.11.0",
        "package-json-to-readme": "^2.0.0",
        "postcss-loader": "^1.2.2",
        "react-hot-loader": "^1.3.1",
        "redbox-react": "^1.3.3",
        "redux-logger": "^2.7.4",
        "sass-loader": "^4.1.1",
        "sqlite3": "^3.1.8",
        "style-loader": "^0.13.1",
        "url-loader": "^0.5.7",
        "webpack": "2.2.0-rc.3",
        "webpack-dev-middleware": "^1.9.0",
        "webpack-dev-server": "2.2.0-rc.0",
        "webpack-hot-middleware": "^2.15.0",
        "webpack-node-externals": "^1.5.4"
    }
}
