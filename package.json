{
    "name": "graphql-react-starter",
    "author": "Jan Carlo Viray <www.jancarloviray.com>",
    "license": "MIT",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "keywords": [
        "Node.js",
        "GraphQL",
        "React",
        "Knex.js",
        "Postgres",
        "Apollo",
        "Redux"
    ],
    "homepage": "https://github.com/jancarloviray/graphql-react-starter#graphql-react-starter",
    "scripts": {
        "build": "bnr build",
        "start": "bnr start",
        "start:prod": "bnr start:prod",
        "api": "bnr api",
        "migrate": "bnr migrate:latest",
        "migrate:make": "bnr migrate:make",
        "migrate:rollback": "bnr migrate:rollback",
        "seed": "bnr seed",
        "seed:make": "bnr seed:make",
        "lint": "eslint .",
        "doc": "readme package.json >> README.md"
    },
    "betterScripts": {
        "build": {
            "command": "webpack --config ./src/client/webpack.config.js",
            "env": {
                "NODE_ENV": "production"
            }
        },
        "start": {
            "command": "babel-node ./src/client/server.js",
            "env": {
                "NODE_ENV": "development",
                "PORT": 3000
            }
        },
        "start:prod": {
            "command": "webpack --config ./src/client/webpack.config.js && babel-node ./src/client/server.js",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3001
            }
        },
        "api": {
            "command": "",
            "env": {
                "NODE_ENV": "production",
                "API_PORT": 8000
            }
        },
        "migrate:make": {
            "command": "knex migrate:make $@",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "migrate": {
            "command": "knex migrate:latest",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "migrate:rollback": {
            "command": "knex migrate:rollback",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "seed:make": {
            "command": "knex seed:make",
            "env": {
                "NODE_ENV": "development"
            }
        },
        "seed": {
            "command": "knex seed:run",
            "env": {
                "NODE_ENV": "development"
            }
        }
    },
    "dependencies": {
        "body-parser": "^1.15.2",
        "cors": "^2.8.1",
        "express": "^4.14.0",
        "graphql-server-express": "^0.4.3",
        "graphql-tools": "^0.8.4",
        "knex": "^0.12.6",
        "lodash": "^4.17.3",
        "pg": "^6.1.2",
        "react": "^15.4.1",
        "react-dom": "^15.4.1",
        "react-redux": "^5.0.1",
        "react-router": "^3.0.0",
        "react-router-redux": "^4.0.7",
        "redux": "^3.6.0"
    },
    "devDependencies": {
        "babel-cli": "^6.18.0",
        "babel-loader": "^6.2.10",
        "babel-preset-env": "^1.1.4",
        "babel-preset-react": "^6.16.0",
        "casual": "^1.5.8",
        "css-loader": "^0.26.1",
        "eslint": "^3.12.2",
        "eslint-plugin-babel": "^4.0.0",
        "eslint-plugin-graphql": "^0.4.3",
        "eslint-plugin-react": "^6.8.0",
        "extract-text-webpack-plugin": "^2.0.0-beta.4",
        "json-loader": "^0.5.4",
        "node-sass": "^4.1.1",
        "nodemon": "^1.11.0",
        "package-json-to-readme": "^2.0.0",
        "react-hot-loader": "^1.3.1",
        "sass-loader": "^4.1.1",
        "sqlite3": "^3.1.8",
        "style-loader": "^0.13.1",
        "webpack": "2.2.0-rc.3",
        "webpack-dev-middleware": "^1.9.0",
        "webpack-dev-server": "2.2.0-rc.0",
        "webpack-hot-middleware": "^2.15.0",
        "webpack-node-externals": "^1.5.4",
        "redux-logger": "^2.7.4",
        "better-npm-run": "^0.0.13"
    },
    "peerDependencies": {
        "graphql": "^0.8.2"
    }
}